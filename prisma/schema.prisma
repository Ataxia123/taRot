generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  posts Post[]
}

model Post {
  id     Int    @id @default(autoincrement())
  title  String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}

model Domain {
  id          Int          @id @default(autoincrement())
  domainName  String       @db.VarChar(255)
  subdomains  Subdomain[]
}

model Subdomain {
  id          Int          @id @default(autoincrement())
  subdomainName String     @db.VarChar(255)
  domainId    Int
  domain      Domain       @relation(fields: [domainId], references: [id])
  qaPairs     QAPairs[]
}

model QAPairs {
  id          Int          @id @default(autoincrement())
  question    String       @db.VarChar(255)
  answer      String       @db.VarChar(1000)
  subdomainId Int
  subdomain   Subdomain    @relation(fields: [subdomainId], references: [id])
}
